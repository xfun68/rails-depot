<% if cart_item == @current_item %>
  <tr id="current_item">
    <td id="current_item_quantity"><%= cart_item.quantity %>&times;</td>
    <td><%= cart_item.title %></td>
    <td class="item-price" id="current_item_price"><%= number_to_currency(cart_item.price) %></td>
  </tr>
<% else %>
  <tr>
    <td><%= cart_item.quantity %>&times;</td>
    <td><%= cart_item.title %></td>
    <td class="item-price"><%= number_to_currency(cart_item.price) %></td>
  </tr>
<% end %>
